{
  "name": "@camunda/linting",
  "version": "0.11.0",
  "description": "Linting for Camunda Platform",
  "main": "index.js",
  "scripts": {
    "all": "npm run lint && npm test",
    "dev": "npm run test:watch",
    "lint": "eslint .",
    "start": "cross-env SINGLE_START=modeler npm run test:watch",
    "test": "karma start",
    "test:watch": "npm test -- --auto-watch --no-single-run"
  },
  "keywords": [
    "bpmnlint",
    "camunda"
  ],
  "author": {
    "name": "Philipp Fromme",
    "url": "https://github.com/philippfromme"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camunda/linting"
  },
  "license": "MIT",
  "dependencies": {
    "bpmn-moddle": "^7.1.3",
    "bpmnlint": "^8.0.0",
    "bpmnlint-plugin-camunda-compat": "^0.16.0",
    "bpmnlint-utils": "^1.0.2",
    "min-dash": "^4.0.0",
    "min-dom": "^4.0.1",
    "zeebe-bpmn-moddle": "^0.15.0"
  },
  "devDependencies": {
    "@bpmn-io/properties-panel": "^0.23.0",
    "bpmn-js": "^9.4.0",
    "bpmn-js-properties-panel": "^1.10.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-plugin-bpmn-io": "^0.16.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-debug-launcher": "0.0.5",
    "karma-env-preprocessor": "^0.1.1",
    "karma-mocha": "^2.0.1",
    "karma-sinon-chai": "^2.0.2",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "mocha-test-container-support": "^0.2.0",
    "modeler-moddle": "^0.2.0",
    "puppeteer": "^16.2.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "bpmn-js-properties-panel": ">= 1.10.0"
  },
  "peerDependenciesMeta": {
    "bpmn-js-properties-panel": {
      "optional": true
    }
  },
  "files": [
    "assets",
    "lib",
    "modeler.js"
  ],
  "publishConfig": {
    "access": "public"
  }
}
